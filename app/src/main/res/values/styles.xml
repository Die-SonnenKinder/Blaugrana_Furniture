<?xml version="1.0" encoding="utf-8"?>
<resources>



    <style name="h5">
        <item name="android:fontFamily">@font/fcbarcelona_primary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">@dimen/h5TextSize</item>
    </style>

    <style name="h4">
        <item name="android:fontFamily">@font/fcbarcelona_primary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
    </style>

    <style name="h3">
        <item name="android:fontFamily">@font/fcbarcelona_primary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
    </style>

    <style name="h2">
        <item name="android:fontFamily">@font/fcbarcelona_primary</item>
        <item name="android:textColor">@color/g_gray700</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
    </style>

    <style name="h1">
        <item name="android:fontFamily">@font/fcbarcelona_primary</item>
        <item name="android:textColor">@color/g_gray700</item>
        <item name="android:textSize">@dimen/h1TextSize</item>
    </style>

    <style name="yellowButtonStyle">
        <item name="android:background">@drawable/yellow_background</item>
        <item name="android:fontFamily">@font/fcbarcelona_primary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="blueButtonStyle">
        <item name="android:background">@drawable/blue_background</item>
        <item name="android:fontFamily">@font/fcbarcelona_primary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="whiteButtonStyle">
        <item name="android:background">@drawable/white_background</item>
        <item name="android:fontFamily">@font/fcbarcelona_primary</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:textSize">@dimen/h3TextSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="gradientButtonStyle">
        <item name="android:background">@drawable/gradient_background</item>
        <item name="android:fontFamily">@font/fcbarcelona_primary</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="editText">
        <item name="android:background">@drawable/white_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/g_blue_gray200</item>
        <item name="singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/fcbarcelona_primary</item>
    </style>

    <style name="ggfbButton">
        <item name="android:background">@drawable/white_background_2</item>
        <item name="android:fontFamily">@font/fcbarcelona_primary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h5TextSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <dimen name="h5TextSize">40sp</dimen>
    <dimen name="h4TextSize">32sp</dimen>
    <dimen name="h3TextSize">24sp</dimen>
    <dimen name="h2TextSize">18sp</dimen>
    <dimen name="h1TextSize">14sp</dimen>


    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BigTextViewThin">
        <item name="android:textColor">#4b4f60</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/fcbarcelona_primary</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="SmallTextViewThin">
    <item name="android:textColor">@color/g_gray700</item>
    <item name="android:textSize">10sp</item>
    <item name="fontFamily">@font/fcbarcelona_primary</item>
    </style>

    <style name="MediumTextViewThin">
        <item name="android:textColor">@color/g_gray700</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/fcbarcelona_primary</item>
    </style>

    <style name="tabLayout_text" parent="TextAppearance.AppCompat">
        <item name="color">@color/black</item>
        <item name="fontFamily">@font/fcbarcelona_primary</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>