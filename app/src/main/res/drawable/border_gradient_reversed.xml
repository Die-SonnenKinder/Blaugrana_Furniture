<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#A50044"/>
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:left="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#A50044"/>
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item android:left="4dp" android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#004D98"/>
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:left="4dp" android:top="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#004D98"/>
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/g_white"/>
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
